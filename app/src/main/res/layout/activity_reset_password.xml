<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center|top"
    android:padding="20dp"
    android:background="@color/second_color"
    tools:context=".start.fotgot_verification.ResetPasswordActivity">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="start"
        android:src="@drawable/back_image"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/phone_verify_image"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:text="Reset your Password"
        android:textColor="@color/app_color"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:layout_marginTop="10dp"
        android:text="@string/reset_password"
        android:textColor="@color/white"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:text="New Password"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_grey_background"
        android:layout_marginTop="5dp"
        android:hint="Enter Password"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins"
        android:drawablePadding="10dp"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:paddingEnd="10dp"
        android:drawableTint="@color/second_color"
        android:paddingLeft="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:text="Confirm Password"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/ed_confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edit_grey_background"
        android:layout_marginTop="5dp"
        android:hint="Enter Confirm Password"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:fontFamily="@font/poppins"
        android:drawablePadding="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/light_grey"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:drawableEnd="@drawable/ic_visibility_off"
        android:paddingEnd="10dp"
        android:drawableTint="@color/second_color"
        android:paddingLeft="10dp"
        />


    <Button
        android:id="@+id/open_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_marginTop="40dp"
        android:textAllCaps="false"
        android:fontFamily="@font/poppins_bold"
        android:text="Reset Password"
        android:textColor="@color/white"
        />

</LinearLayout>