<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/second_color"
    >

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:id="@+id/ll_sendPayment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_dollor"
                    android:padding="15dp"
                    android:background="@drawable/edit_grey_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"
                    android:text="Send Payment"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_transferHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_transfer"
                    android:padding="15dp"
                    android:background="@drawable/edit_grey_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"
                    android:text="Transfer History"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_deposit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_deposit"
                    android:padding="15dp"
                    android:background="@drawable/edit_grey_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"
                    android:text="Deposit"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_depositHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_history"
                    android:padding="15dp"
                    android:background="@drawable/edit_grey_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"
                    android:text="Deposit History"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_withdraw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_withdraw"
                    android:padding="15dp"
                    android:background="@drawable/edit_grey_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"
                    android:text="Withdraw"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_withdrawHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_history"
                    android:padding="15dp"
                    android:background="@drawable/edit_grey_background"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppins"
                    android:layout_marginTop="10dp"
                    android:text="Withdraw History"
                    />

            </LinearLayout>


        </LinearLayout>



    </HorizontalScrollView>



</LinearLayout>