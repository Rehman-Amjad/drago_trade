<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/second_color"
    tools:context=".start.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="@string/hey"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:text="@string/sign_up_now"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:text="@string/signup_content"
            android:textColor="@color/white"
            />

        <LinearLayout
            android:id="@+id/google_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/edit_background"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="20dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_google"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:fontFamily="@font/poppins_bold"
                android:textSize="12sp"
                android:layout_marginLeft="10dp"
                android:text="@string/login_with_google"
                android:textColor="@color/app_color"
                />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:text="Full Name"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/ed_fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="5dp"
            android:hint="Enter Full Name"
            android:textSize="12sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_marginTop="30dp"
            android:text="Referral ID"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="5dp"
            android:hint="referral"
            android:textSize="12sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="Your Email"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="5dp"
            android:hint="Enter Email"
            android:textSize="12sp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/ed_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="5dp"
            android:hint="Enter Password"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:paddingEnd="10dp"
            android:drawableTint="@color/second_color"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="Confirm Password"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/ed_confirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="5dp"
            android:hint="Enter Confirm Password"
            android:textSize="12sp"
            android:inputType="textPassword"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:drawableEnd="@drawable/ic_visibility_off"
            android:paddingEnd="10dp"
            android:drawableTint="@color/second_color"
            android:paddingLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textStart"
            android:fontFamily="@font/poppins_bold"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:text="Referral Code"
            android:textColor="@color/white"
            />

        <EditText
            android:id="@+id/ed_referralCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/edit_background"
            android:layout_marginTop="5dp"
            android:hint="Enter Referral Code"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:paddingEnd="10dp"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:paddingLeft="10dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_marginTop="10dp"
            >
            <CheckBox
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:buttonTint="@color/app_color"
                android:foregroundTint="@color/app_color"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:text="I agree to the"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:text="terms &amp; conditions"
                    android:textColor="@color/app_color"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:text="and"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textStart"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:text="Privacy Policy"
                    android:textColor="@color/app_color"
                    />


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:text="Create an Account"
            android:textColor="@color/white"
            />



    </LinearLayout>

</ScrollView>