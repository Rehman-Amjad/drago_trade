<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DragoTrade" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/black</item>
        <item name="colorSecondary">@color/app_color</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@color/second_color</item>
<!--        <item name="android:windowDisablePreview">true</item>-->
    </style>

    <style name="Theme.DragoTrade" parent="Base.Theme.DragoTrade" />
<!--        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>-->
